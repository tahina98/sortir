{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(sortieForm) }}
    {{ form_widget(sortieForm) }}
    {% if sortie.etat.statutNom == 'EN_CREATION' %}
        <button class="modification" name="clicked" value="supprimer" type="submit">supprimer</button>
        <button class="modification" name="clicked" value="publier" type="submit">publier</button>
        <button class="modification" name="clicked" value="modifier" type="submit">modifier</button>
    {% endif %}
    {% if sortie.etat.statutNom == 'OUVERT'
        and sortie.dateHeureDebut > "now" %}
        <button class="modification" name="clicked" value="annuler" type="submit">annuler</button>
        {{ form_end(sortieForm) }}
    {% endif %}
    <button class="modification" name="clicked" value="retour" type="submit">retour</button>
{% endblock %}

{% block title %}

{% endblock %}

